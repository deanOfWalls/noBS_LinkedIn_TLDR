{
    "manifest_version": 3,
    "name": "Job Listing Simplifier",
    "version": "1.0",
    "description": "Simplifies job listings into bullet points",
    "permissions": ["activeTab", "storage"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ],
    "icons": {
      "16": "tldr.png",
      "48": "tldr.png",
      "128": "tldr.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["tldr.png"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  